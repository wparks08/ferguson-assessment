{
  "name": "ferguson-assessment",
  "version": "1.0.0",
  "description": "Interview challenge for Ferguson Enterprises",
  "main": "./build/index.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",

    "prestart:prod": "npm run build",
    "start:prod": "node ./build/index.js",
    "start:dev": "concurrently \"tsnd ./src/index.ts --ignore-watch 'client/**'\" \"npm run client\"",
    "client": "cd client && npm start",

    "install": "cd client && npm install",
    "build": "npm run clean && tsc -b && cd client && npm run build",
    "clean": "tsc -b --clean",

    "test": "jest",

    "release": "standard-version",
    "release:dry": "standard-version --dry-run"
  },
  "keywords": [],
  "author": "Will Parks",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "if-env": "^1.0.4",
    "mongodb": "^4.8.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "concurrently": "^7.3.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "supertest": "^6.2.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  }
}
